<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="?attr/boxItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center_vertical|start"
                android:layout_width="50dp"
                app:cardCornerRadius="10000dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:id="@+id/review_image"
                    tools:src="@drawable/profile_bg_blue"
                    android:contentDescription="@string/user_image_avatar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:id="@+id/review_author"
                        android:textColor="?attr/textColor"
                        android:layout_gravity="start"
                        tools:text="Marajuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColor="?attr/grayTextColor"
                        android:gravity="end"
                        android:id="@+id/review_time"
                        tools:text="2017-10-21 23:40:03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:id="@+id/review_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:orientation="horizontal"
                        app:chipSpacingVertical="-7dp" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/spoiler_text"
            android:textOff="@string/reveal_spoiler"
            android:textOn="@string/hide_spoiler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:visibility="gone"
            android:drawableEnd="@drawable/quantum_ic_keyboard_arrow_down_white_36"
            style="@style/BlackButton" />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            tools:text="GOOD REVIEW"
            android:textColor="?attr/textColor"
            android:textStyle="bold"
            android:id="@+id/review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingBottom="5dp"
            android:textColor="?attr/textColor"
            tools:text="Test"
            android:id="@+id/review_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.cardview.widget.CardView>